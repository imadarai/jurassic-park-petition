<div id="main-image">
    <img src="/images/main.png" alt="">
</div>

<div class="input-container">
    <div class="error-messages">
        {{#if error}}
            <p class="error">Password is incorrect.  Please try again.</p>
            <audio autoplay>
                <source src="audio/magicword.mp3" type="audio/mpeg">
            </audio>
        {{/if}}
        {{#if wrongId}}
            <p class="error">Wrong Email.  Please try again or <a href="/registration">Register</a></p>
        {{/if}}
    <div>
    <form class="input" method="POST">
        <!-- Input Fiels -->
       <input type="email" name="email" placeholder="Email">
       <br>
       <input type="password" name="password" placeholder="Password">
       <br>
       <!-- BUTTONS -->
       <input type="hidden" name="_csrf" value="{{csrfToken}}">
       <!-- buttons -->
       <div class="update-profile">
           <button id="register">LOGIN</button>
       </div>
    </form>
</div>
