
<p class="undersigned">Edit Profile</p>

<div class="input-container">

    <div class="error-messages">
        {{#if error}}
            <p class="error">There was an error.  Please try again</p>
        {{/if}}
        {{#if successfullyUpdated}}
            <p class="error">Your Profile has been updated.</p>
        {{/if}}
        {{#if url}}
            <p class="error">You've entered an invalid URL.</p>
        {{/if}}
    </div>
    <form class="input" method="POST">
        <!-- Input Fiels -->
        <!-- Hidden Fields -->
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        {{#profileInfo}}
        <input type="text" name="first" placeholder="First Name" value="{{first}}">
        <br>
        <input type="text" name="last" placeholder="Last Name" value="{{last}}">
        <br>
        <input type="email" name="email" placeholder="Email" value="{{email}}">
        <br>
        <input type="password" name="password" placeholder="Update Password">
        <br>
        <input type="number" name="age" placeholder="Age" value="{{age}}">
        <br>
        <input type="text" name="city" placeholder="City" value="{{city}}">
        <br>
        <input type="url" name="url" placeholder="https://www.homepage.com" value="{{url}}">
        {{/profileInfo}}

       <!-- buttons -->
       <div class="update-profile">
           <button id="register">Update Profile</button>
       </div>
    </form>
</div>
<a href="/delete"><button class="delete">Delete Account</button></a>
